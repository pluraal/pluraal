{
  "inputs": {
    "Customer Name": "string",
    "Order Amount": "number",
    "Is Premium": "bool"
  },
  "calculations": {
    "Discount": {
      "type": "branch",
      "value": {
        "if": { "ref": "Is Premium" },
        "then": 0.15,
        "else": 0.05
      }
    },
    "Discount Category": {
      "type": "branch",
      "value": {
        "rules": [
          {
            "when": { "ref": "Is Premium" },
            "then": "premium"
          }
        ],
        "otherwise": "standard"
      }
    },
    "Greeting": {
      "type": "branch",
      "value": {
        "branchOn": { "ref": "Discount Category" },
        "when": [
          ["premium", "Thank you for being a Premium customer!"],
          ["standard", "Thank you for your order!"]
        ],
        "otherwise": "Hello!"
      }
    }
  },
  "outputs": ["Greeting"]
}
